# CalculeMedia
// caulcular a media

function calcularMedia(numero1, numero2){
const soma = numero1+numero2
    const media = soma/2
    return media;
}
let n1 = Number(prompt("digite um primeiro valor"))
const n2 = Number(prompt("digite um segundo valor"))

const resultado=calcularMedia(n1,n2);
console.log(resultado);
